{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "lib": [
            "es5",
            "es2015",
            "DOM"
        ],
        "sourceMap": true,
        "moduleResolution": "Node",
        "outDir": "./dist",
        "declaration": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "removeComments": true,
        "strict": true,
        "noImplicitAny": false
    },
    "files": [
        "src/index.ts"
    ]
}